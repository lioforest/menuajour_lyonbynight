<% @title = "Mot de passe oublié ?" %>

<%= render "shared/header", title: @title %>
<div class="container d-flex justify-content-center mt-5">
  <div class="col-md-5">
    <p class="mb-5">Nous allons vous envoyer un message qui contiendra la marche à suivre afin de changer votre mot de passe.</p>
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="form-group">
        <%= f.label :email, "Adresse mail" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
      </div>

      <%= render "devise/shared/submit_button", text: "Confirmer", form:f %>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
