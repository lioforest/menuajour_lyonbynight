<% @title = "Changer votre mot de passe" %>

<%= render "shared/header", title: @title %>
<div class="d-flex flex-column align-items-center mt-5">
  <div class="col-md-5">
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <%= f.hidden_field :reset_password_token %>

      <div class="form-group">
        <%= f.label :password, "Nouveau mot de passe." %>
        <% if @minimum_password_length %>
          <em> (<%= @minimum_password_length %> caract√®res minimum)</em><br />
        <% end %>
        <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "form-control"%>
      </div>

      <div class="form-group">
        <%= f.label :password_confirmation, "Confirmer le nouveau mot de passe" %><br />
        <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
      </div>

      <%= render "devise/shared/submit_button", text: "Confirmer", form: f%>
    <% end %>
    <%= render "devise/shared/links" %>
  </div>
</div>