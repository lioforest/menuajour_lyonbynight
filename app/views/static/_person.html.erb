 <div class="col-md-4">
    <div class="team__item">
        <div class="team__item_photo">
            <%= image_tag person[:photo], alt: person[:firstname], class: "img-fluid" %>
        </div>
        <div class="team__item_name">
                <h3><%= person[:firstname] %></h3>
        </div>
        <div class="team__item_overlay">
            <p class="team__item_profession"><%= person[:title] %></p>
        </div>
    </div>
</div>