<%= render "shared/header", title: "S'abonner" %>

<div class="container d-flex justify-content-center">

	<div class="col-md-8 d-flex flex-column align-items-center mt-5 mb-5 p-5 justify-content-around border border-primary" style="height: 450px;">

		<h2 style="text-decoration: underline; text-decoration-color: #f1ae2b;">S'abonner</h2>
		<div>Offre</div>
		<div>Prix</div>
		<div>
			<p>Avantage 1</p>
			<p>Avantage 2</p>
			<p>Avantage 3</p>

		</div>

		<%= form_tag charges_path, class:'d-flex flex-column' do %>
		  <article>
		    <% if flash[:error].present? %>
		      <div id="error_explanation">
		        <p><%= flash[:error] %></p>
		      </div>
		    <% end %>
		    <label class="amount">
		      <span>Amount: $100.00</span>
		    </label>
		  </article>

		  <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
		          data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
		          data-description="A month's subscription"
		          data-amount="1000"
		          data-locale="auto"></script>
		<% end %>

	</div>
	
</div>