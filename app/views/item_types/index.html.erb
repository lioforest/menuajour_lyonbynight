<%= render "shared/header_with_subtitle", title: @title, subtitle: @subtitle %>


<!--################################################-->
<!--########## Ajout Catégories/Items ##############-->
<!--################################################-->

<%= render "add_header"%>

<div class="container">
  <div id="itemForm"></div>

  <!--################################################-->
  <!--########## Liste Catégories/Items ##############-->
  <!--################################################-->
    <!--******************* Catégories *******************-->
    <%@category_types.order(:name).each do |category_type|%>
    <div class="categoryElt">
      <%= render "category_types/category_type", category_type: category_type %>

      <!--******************* Items *******************-->
      <%if category_type.item_types.length !=0%>

      <%= render "item_types", category_type: category_type %>

      <%end%>
    </div>
    <%end%>
  </div>
</div>


<%= render "remove_item_footer"%>
